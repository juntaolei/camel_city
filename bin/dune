(executables
 (names main)
 (modes byte)
 (libraries lib)
 (preprocess
  (pps js_of_ocaml-ppx)))

(rule
 (targets main.js)
 (action
  (run %{bin:js_of_ocaml} --source-map %{dep:main.bc} -o %{targets})))

(alias
 (name default)
 (deps
  main.js
  index.html
  style.css
  (glob_files textures/*.{png})))
